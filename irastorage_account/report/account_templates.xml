<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_irastorage_account">
        <t t-call="report.html_container">
                <t t-call="report.external_layout">
                    <div class="page">
                        <div class="oe_structure"/>

                        <div class="row">
                            <div class="col-xs-5 col-xs-offset-7">
                                <div t-field="user.partner_id"
                                    t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                            </div>
                        </div>

                        <h2>Irastorage Account</h2>

                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Last name</th>
                                    <th>Account Number</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="docs" t-as="doc">
                                    <tr>
                                        <td><t t-esc="doc.name"/></td>
                                        <td><t t-esc="doc.lastname"/></td>
                                        <td><t t-esc="doc.accountnumber"/></td>
                                    </tr>
                                    <tr>
                                        <td>
                                        <table>
                                        <t t-foreach="doc.expecting_inventories" t-as="line">
                                            <tr>
                                                <td><t t-esc="line.commodity"/></td>
                                                <td><t t-esc="line.name"/></td>
                                                <td><t t-esc="line.products.name"/></td>
                                            </tr>
                                        </t>
                                        </table>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>

                        </table>


                        <div class="oe_structure"/>
                    </div>
                </t>
        </t>
    </template>
</odoo>
