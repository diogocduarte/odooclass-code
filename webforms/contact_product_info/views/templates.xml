<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="getproductinfo_form" name="Product Info Form" inherit_id="website_sale.product" customize_show="True">
            <xpath expr="//form[@class='js_add_cart_variants']" position="after">
                <div>
                    <form action="/website_form/" method="post" data-model_name="crm.lead" data-success_page="/page/website_crm.contactus_thanks" class="s_website_form form-horizontal container-fluid mt32" enctype="multipart/form-data">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
    					<input type="hidden" name="name" t-att-value="'Interested in ' + product.name"/>
						 <div class="input-group form-field o_website_form_required_custom">
						      <input type="text" class="form-control" placeholder="Your email..." name="email_from"/>
						      <span class="input-group-btn">
						        <button class="btn btn-default o_website_form_send" type="button">Ask us about this!</button>
						      </span>
						      <span id="o_website_form_result"></span>
						</div>
                    </form>
                </div>
			</xpath>
		</template>
</data>
</openerp>